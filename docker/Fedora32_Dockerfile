# Dockerfile for Fedora Build Enviroment for Ezra Bible App

FROM fedora:32

ARG HOST_USER

RUN yum update -y
RUN yum install -y sudo

RUN curl -sL https://rpm.nodesource.com/setup_10.x | sudo -E bash -
RUN yum install -y gcc-c++ make nodejs vim git
RUN yum install -y sword-devel libsqlite3x-devel.x86_64 libicu-devel libcurl-devel subversion cmake unzip

# Install node 10.19
RUN npm install -g n
RUN n 10.19

RUN npm install -g electron-installer-redhat@3.0.0
RUN yum install -y rpm-build
RUN yum install -y python

COPY docker/build_fedora32.sh /build.sh

ENTRYPOINT ["/build.sh"]
